@page
@model SearchModel
@{
    ViewBag.Title = "Search Page";
}

<div class="w-96 mx-auto bg-white p-2">
    <h1>Search</h1>
    <form method="post">
        <label asp-for="Search.Name">Name</label>
        <br />
        <input asp-for="Search.Name" />
        <span asp-validation-for="Search.Name"></span>
        <button class="bg-green-600 hover:bg-green-800" type="submit">Search</button>

        @if (Model.Pokemon != null)
        {
             <div>
                <p>Name: @Model.Pokemon.Name</p>
                <p>Type: @Model.Pokemon.Type1.TypeName</p>
                @if (Model.Pokemon.Type2 != null)
                {
                    <p>Type: @Model.Pokemon.Type2.TypeName</p>
                }
                <br/>
                <p class="font-bold">Strengths:</p>
                <ul>
                    @foreach (var strength in Model.Pokemon.PokemonStrengths)
                    {
                        <li>@strength.Type.TypeName</li>
                    }
                </ul>
                <br/>
                <p class="font-bold">Weaknesses:</p>
                <ul>
                    @foreach (var weakness in Model.Pokemon.PokemonWeaknesses)
                    {
                        <li>@weakness.Type.TypeName</li>
                    }
                </ul>
            </div> 
        }
        <br/>
        <div>@Model.Message</div>
    </form>
</div>

